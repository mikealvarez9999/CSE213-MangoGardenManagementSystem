<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="700.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.cse213.cse213mangogardenmanagementsystem.Accountant.controller.LargeExpenseController">
    <children>
        <Label layoutX="20.0" layoutY="20.0" text="SUBMIT LARGE EXPENSE APPROVAL (OWNER)">
            <font>
                <Font name="System Bold" size="20.0" />
            </font>
        </Label>
        <Label layoutX="20.0" layoutY="50.0" prefWidth="660.0" text="This request, exceeding the GM's spending limit, requires approval from the Owner." wrapText="true" />

        <Label layoutX="20.0" layoutY="85.0" text="Item/Service Name" />
        <TextField fx:id="txtItemName" layoutX="20.0" layoutY="110.0" prefWidth="300.0" promptText="Item/Service Name" />

        <Label layoutX="20.0" layoutY="150.0" text="Expense Amount" />
        <TextField fx:id="txtExpenseAmount" layoutX="20.0" layoutY="175.0" prefWidth="200.0" promptText="Expense Amount (e.g., 50,000.00)" />

        <Label layoutX="20.0" layoutY="215.0" text="Detailed Justification for Owner Approval" />
        <TextArea fx:id="txtJustification" layoutX="20.0" layoutY="240.0" prefHeight="100.0" prefWidth="660.0" promptText="Detailed Justification for Owner Approval" />

        <Label fx:id="lblValidationError" layoutX="20.0" layoutY="360.0" text="" />

        <Button layoutX="490.0" layoutY="550.0" text="Submit for Owner Approval" onAction="#handleSubmitForApproval" />
    </children>
</AnchorPane>