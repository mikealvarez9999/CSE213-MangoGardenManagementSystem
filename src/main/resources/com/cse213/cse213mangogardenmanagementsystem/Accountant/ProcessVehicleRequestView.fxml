<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>


<AnchorPane prefHeight="600.0" prefWidth="700.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.cse213.cse213mangogardenmanagementsystem.Accountant.controller.ProcessVehicleRequestController">
    <children>
        <Label layoutX="20.0" layoutY="20.0" text="PROCESS TRANSPORT MANAGER MAINTENANCE REQUESTS">
            <font>
                <Font name="System Bold" size="20.0" />
            </font>
        </Label>
        <Label layoutX="20.0" layoutY="50.0" prefWidth="660.0" text="Review incoming requests for vehicle servicing and generate the necessary budget request if approved." wrapText="true" />

        <TableView fx:id="maintenanceTable" layoutX="20.0" layoutY="90.0" prefHeight="450.0" prefWidth="660.0">
            <columns>
                <TableColumn prefWidth="150.0" text="Requester" />
                <TableColumn prefWidth="100.0" text="Vehicle ID" />
                <TableColumn prefWidth="210.0" text="Service Required" />
                <TableColumn prefWidth="100.0" text="Estimated Cost" />
                <TableColumn prefWidth="100.0" text="Status" />
            </columns>
        </TableView>

        <Button layoutX="460.0" layoutY="560.0" mnemonicParsing="false" onAction="#handleRejectMaintenance" text="❌ Reject Selected" />
        <Button layoutX="575.0" layoutY="560.0" mnemonicParsing="false" onAction="#handleApproveMaintenance" text="✅ Approve &amp; Generate Budget" />
    </children>
</AnchorPane>