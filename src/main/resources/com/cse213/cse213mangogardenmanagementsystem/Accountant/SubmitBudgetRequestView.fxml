<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="700.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.cse213.cse213mangogardenmanagementsystem.Accountant.controller.BudgetRequestController">
    <children>
        <Label layoutX="20.0" layoutY="20.0" text="SUBMIT BUDGET APPROVAL REQUEST (GM)">
            <font>
                <Font name="System Bold" size="20.0" />
            </font>
        </Label>
        <Label layoutX="20.0" layoutY="50.0" prefWidth="660.0" text="Create a request for funds to be approved by the General Manager." wrapText="true" />

        <Label layoutX="20.0" layoutY="85.0" text="Budget Type" />
        <ComboBox fx:id="cmbBudgetType" layoutX="20.0" layoutY="110.0" prefWidth="300.0" promptText="Budget Type (e.g., Tool Procurement, Vehicle Maintenance)" />

        <Label layoutX="20.0" layoutY="150.0" text="Amount Requested" />
        <TextField fx:id="txtAmount" layoutX="20.0" layoutY="175.0" prefWidth="200.0" promptText="Amount Requested (e.g., 5000.00)" />

        <Label layoutX="20.0" layoutY="215.0" text="Detailed Purpose and Justification" />
        <TextArea fx:id="txtPurpose" layoutX="20.0" layoutY="240.0" prefHeight="100.0" prefWidth="660.0" promptText="Detailed Purpose and Justification" />

        <Button layoutX="20.0" layoutY="360.0" text="Attach Supporting Documents" onAction="#handleAttachDocuments" />

        <Label fx:id="lblValidationError" layoutX="20.0" layoutY="400.0" text="" />

        <Button layoutX="530.0" layoutY="550.0" text="Submit Request to GM" onAction="#handleSubmitRequest" />
    </children>
</AnchorPane>