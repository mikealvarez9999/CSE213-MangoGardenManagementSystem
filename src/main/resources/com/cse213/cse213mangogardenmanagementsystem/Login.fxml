<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.cse213.cse213mangogardenmanagementsystem.LoginController">
    <children>
        <VBox spacing="12" alignment="CENTER" layoutX="120" layoutY="80">
            <children>

                <Label text="User Login" style="-fx-font-size: 22px; -fx-font-weight: bold;" />

                <TextField fx:id="usernameField" promptText="Username"
                           prefWidth="220" />

                <PasswordField fx:id="passwordField" promptText="Password"
                               prefWidth="220" />

                <Button text="Login" prefWidth="220"
                        onAction="#handleLogin" />

                <Label fx:id="messageLabel" textFill="red" />

            </children>

            <padding>
                <Insets top="20" bottom="20" left="20" right="20"/>
            </padding>
        </VBox>
    </children>
</AnchorPane>