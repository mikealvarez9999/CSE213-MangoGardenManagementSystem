<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/24.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.cse213.cse213mangogardenmanagementsystem.WarehouseManager.controller.WarehouseManagerDashboardController"
            prefHeight="650.0" prefWidth="900.0" style="-fx-background-color: #fefefe;">

    <!-- TOP HEADER -->
    <top>
        <VBox alignment="CENTER_LEFT"
              style="-fx-background-color: #1E4E43; -fx-padding: 20px; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.3), 10, 0, 0, 5);"
              BorderPane.alignment="CENTER">
            <children>
                <Label fx:id="welcomeLabel" text="MANGO GARDEN - Warehouse Manager" textFill="#fefefe">
                    <font>
                        <Font name="System Bold" size="20.0"/>
                    </font>
                </Label>
            </children>
        </VBox>
    </top>

    <!-- LEFT SIDEBAR -->
    <left>
        <VBox alignment="TOP_CENTER" prefWidth="240.0" spacing="15.0"
              style="-fx-background-color: #1e4e43; -fx-padding: 20px;" BorderPane.alignment="CENTER">
            <children>
                <Label style="-fx-font-weight: bold; -fx-font-size: 15px; -fx-padding: 0 0 10 0; -fx-text-fill: #F0F347;" text="DASHBOARD"/>

                <Button maxWidth="Infinity" onAction="#recordBatchOnMouseClick" text="RecordBatch"
                        style="-fx-background-color: #E08854; -fx-text-fill: #1E4E43; -fx-font-weight: bold; -fx-padding: 10px; -fx-background-radius: 8px; -fx-cursor: hand;"/>
                <Button maxWidth="Infinity" onAction="#mangoInventoryOnMouseClick" text="MangoInventory"
                        style="-fx-background-color: #E08854; -fx-text-fill: #1E4E43; -fx-font-weight: bold; -fx-padding: 10px; -fx-background-radius: 8px; -fx-cursor: hand;"/>
                <Button maxWidth="Infinity" onAction="#updateInventoryOnMouseClick" text="UpdateInventory"
                        style="-fx-background-color: #E08854; -fx-text-fill: #1E4E43; -fx-font-weight: bold; -fx-padding: 10px; -fx-background-radius: 8px; -fx-cursor: hand;"/>
                <Button maxWidth="Infinity" onAction="#trackSpoilageOnMouseClick" text="TrackSpoilage"
                        style="-fx-background-color: #E08854; -fx-text-fill: #1E4E43; -fx-font-weight: bold; -fx-padding: 10px; -fx-background-radius: 8px; -fx-cursor: hand;"/>
                <Button maxWidth="Infinity" onAction="#approveOrderAndPrepareOnMouseClick" text="ApproveOrderAndPrepare"
                        style="-fx-background-color: #E08854; -fx-text-fill: #1E4E43; -fx-font-weight: bold; -fx-padding: 10px; -fx-background-radius: 8px; -fx-cursor: hand;"/>
                <Button maxWidth="Infinity" onAction="#sendOrderToTransportOnMouseClick" text="SendOrderToTransport"
                        style="-fx-background-color: #E08854; -fx-text-fill: #1E4E43; -fx-font-weight: bold; -fx-padding: 10px; -fx-background-radius: 8px; -fx-cursor: hand;"/>
                <Button maxWidth="Infinity" onAction="#inventorySummaryOnMouseClick" text="InventorySummary"
                        style="-fx-background-color: #E08854; -fx-text-fill: #1E4E43; -fx-font-weight: bold; -fx-padding: 10px; -fx-background-radius: 8px; -fx-cursor: hand;"/>
                <Button maxWidth="Infinity" onAction="#harvestRequestOnMouseClick" text="HarvestRequest"
                        style="-fx-background-color: #E08854; -fx-text-fill: #1E4E43; -fx-font-weight: bold; -fx-padding: 10px; -fx-background-radius: 8px; -fx-cursor: hand;"/>
            </children>
            <BorderPane.margin>
                <Insets right="5.0"/>
            </BorderPane.margin>
        </VBox>
    </left>

    <!-- CENTER CONTENT AREA -->
    <center>
        <VBox fx:id="contentContainer" prefWidth="600.0" prefHeight="600.0" style="-fx-padding: 10;"/>
    </center>

</BorderPane>
