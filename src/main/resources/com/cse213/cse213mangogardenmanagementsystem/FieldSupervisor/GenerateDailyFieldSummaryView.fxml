<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="600.0" prefWidth="700.0" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.cse213.cse213mangogardenmanagementsystem.FieldSupervisor.controller.SummaryController">
    <children>
        <Text layoutX="20.0" layoutY="40.0" strokeType="OUTSIDE" strokeWidth="0.0" text="GENERATE DAILY FIELD SUMMARY">
            <font><Font name="System Bold" size="20.0" /></font>
        </Text>
        <Label layoutX="20.0" layoutY="50.0" text="Aggregates daily attendance, task completion, and resource usage into a final report." />

        <Text layoutX="20.0" layoutY="110.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Summary Date:" />
        <DatePicker fx:id="dateSummary" layoutX="130.0" layoutY="95.0" />
        <Button layoutX="330.0" layoutY="95.0" mnemonicParsing="false" onAction="#handleGeneratePreview" text="Generate Data Preview" />

        <TableView fx:id="summaryTable" layoutX="20.0" layoutY="140.0" prefHeight="300.0" prefWidth="660.0">
            <columns>
                <TableColumn prefWidth="150.0" text="Section" />
                <TableColumn prefWidth="510.0" text="Details" />
            </columns>
        </TableView>

        <Text layoutX="20.0" layoutY="460.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Final Notes / Issues:" />
        <TextArea fx:id="txtNotes" layoutX="20.0" layoutY="470.0" prefHeight="80.0" prefWidth="660.0" promptText="Enter any final notes or important observations for the General Manager." />

        <Button layoutX="537.0" layoutY="559.0" mnemonicParsing="false" onAction="#handleSaveSummary" text="Save Daily Summary" />
    </children>
</AnchorPane>
