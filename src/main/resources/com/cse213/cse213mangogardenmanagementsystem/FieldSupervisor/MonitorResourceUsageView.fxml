<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="600.0" prefWidth="700.0" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.cse213.cse213mangogardenmanagementsystem.FieldSupervisor.controller.ResourceUsageController">
    <children>
        <Text layoutX="20.0" layoutY="40.0" strokeType="OUTSIDE" strokeWidth="0.0" text="MONITOR FIELD RESOURCE INVENTORY &amp; USAGE">
            <font><Font name="System Bold" size="20.0" /></font>
        </Text>
        <Label layoutX="20.0" layoutY="50.0" text="View current inventory levels and log usage for specific items." />

        <Text layoutX="20.0" layoutY="110.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Current Inventory Levels:" />
        <TableView fx:id="inventoryTable" layoutX="20.0" layoutY="120.0" prefHeight="250.0" prefWidth="660.0">
            <columns>
                <TableColumn prefWidth="200.0" text="Item Name" />
                <TableColumn prefWidth="200.0" text="Level/Quantity" />
                <TableColumn prefWidth="190.0" text="Last Usage Log" />
            </columns>
        </TableView>

        <Text layoutX="20.0" layoutY="400.0" strokeType="OUTSIDE" strokeWidth="0.0" text="LOG RESOURCE USAGE:" />
        <Text layoutX="20.0" layoutY="440.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Item Used:" />
        <ComboBox fx:id="cmbItem" layoutX="100.0" layoutY="425.0" prefWidth="250.0" promptText="Select Item" />

        <Text layoutX="370.0" layoutY="442.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Quantity Used:" />
        <TextField fx:id="txtQuantityUsed" layoutX="470.0" layoutY="425.0" prefWidth="100.0" promptText="e.g., 2" />

        <Text layoutX="20.0" layoutY="480.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Purpose" />
        <TextField fx:id="txtPurpose" layoutX="100.0" layoutY="465.0" prefWidth="470.0" />

        <Button layoutX="540.0" layoutY="510.0" mnemonicParsing="false" onAction="#handleSubmitUsage" text="Submit Usage Log" />
        <Button layoutX="20.0" layoutY="503.0" mnemonicParsing="false" onAction="#handleRefresh" text="Refresh Inventory" />
    </children>
</AnchorPane>
