<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="600.0" prefWidth="700.0" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.cse213.cse213mangogardenmanagementsystem.FieldSupervisor.controller.ToolsRequestController">
    <children>
        <Text layoutX="20.0" layoutY="40.0" strokeType="OUTSIDE" strokeWidth="0.0" text="REQUEST TOOLS / RESOURCES">
            <font><Font name="System Bold" size="20.0" /></font>
        </Text>
        <Label layoutX="20.0" layoutY="70.0" text="Submit a formal request to the Accountant for new tools, pesticides, or other necessary resources." />

        <Text layoutX="20.0" layoutY="120.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Item Name:" />
        <TextField fx:id="txtItemName" layoutX="20.0" layoutY="130.0" prefWidth="300.0" promptText="e.g., Pruning Shears, Organic Pesticide Batch" />

        <Text layoutX="350.0" layoutY="120.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Quantity / Batch Size:" />
        <TextField fx:id="txtQuantity" layoutX="350.0" layoutY="130.0" prefWidth="150.0" promptText="e.g., 10, 5 Liters" />

        <Text layoutX="20.0" layoutY="180.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Justification for Request:" />
        <TextArea fx:id="txtJustification" layoutX="20.0" layoutY="190.0" prefHeight="100.0" prefWidth="660.0" promptText="Explain why this resource is needed (e.g., current tools are broken, pest outbreak detected)." />

        <Button layoutX="471.0" layoutY="310.0" mnemonicParsing="false" onAction="#handleSaveRequest" text="Submit Request to Accountant" />
        <Label fx:id="lblConfirmation" layoutX="20.0" layoutY="330.0" text="" />
    </children>
</AnchorPane>
