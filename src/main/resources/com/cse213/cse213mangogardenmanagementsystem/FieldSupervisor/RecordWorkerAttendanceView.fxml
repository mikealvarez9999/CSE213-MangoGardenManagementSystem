<AnchorPane prefHeight="600.0" prefWidth="700.0" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.cse213.cse213mangogardenmanagementsystem.FieldSupervisor.controller.RecordWorkerAttendanceController">
    <children>
        <Text layoutX="20.0" layoutY="40.0" strokeType="OUTSIDE" strokeWidth="0.0" text="RECORD WORKER ATTENDANCE">
            <font><Font name="System Bold" size="20.0" /></font>
        </Text>
        <Label layoutX="20.0" layoutY="50.0" text="Select the date and mark the attendance status for each worker." />

        <Text layoutX="20.0" layoutY="111.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Select Date:" />
        <DatePicker fx:id="datePicker" layoutX="100.0" layoutY="95.0" />
        <ComboBox fx:id="cmbShift" layoutX="297.0" layoutY="95.0" prefWidth="150.0" promptText="Select Shift" />

        <TableView fx:id="attendanceTable" layoutX="20.0" layoutY="140.0" prefHeight="400.0" prefWidth="660.0">
            <columns>
                <TableColumn prefWidth="250.0" text="Worker Name" />
                <TableColumn prefWidth="150.0" text="Current Status" />
                <TableColumn prefWidth="100.0" text="Mark Present" />
                <TableColumn prefWidth="160.0" text="Mark Absent/Leave" />
            </columns>
        </TableView>

        <Button layoutX="510.0" layoutY="550.0" mnemonicParsing="false" onAction="#handleSaveAttendance" text="Save Attendance Record" />
    </children>
