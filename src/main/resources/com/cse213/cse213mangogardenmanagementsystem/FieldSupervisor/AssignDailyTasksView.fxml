<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="600.0" prefWidth="700.0" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.cse213.cse213mangogardenmanagementsystem.FieldSupervisor.controller.AssignDailyTaskController">
    <children>
        <Text layoutX="20.0" layoutY="40.0" strokeType="OUTSIDE" strokeWidth="0.0" text="ASSIGN DAILY TASKS TO WORKERS">
            <font><Font name="System Bold" size="20.0" /></font>
        </Text>
        <Label layoutX="20.0" layoutY="50.0" text="Select a pre-defined task or enter a new one, then assign workers." />

        <Text layoutX="20.0" layoutY="110.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Task from Manager" />
        <ComboBox fx:id="cmbTasks" layoutX="20.0" layoutY="120.0" prefWidth="300.0" promptText="Select Pre-defined Task" />

        <Text layoutX="20.0" layoutY="190.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Available Workers:" />
        <ListView fx:id="listWorkers" layoutX="20.0" layoutY="200.0" prefHeight="250.0" prefWidth="300.0" />
        <Text layoutX="350.0" layoutY="190.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Assigned Workers:" />
        <ListView fx:id="listAssignedWorkers" layoutX="350.0" layoutY="200.0" prefHeight="250.0" prefWidth="330.0" />

        <Button layoutX="345.0" layoutY="120.0" mnemonicParsing="false" onAction="#handleAssignSelected" text="Assign Selected" />
        <Button layoutX="461.0" layoutY="120.0" mnemonicParsing="false" onAction="#handleRemoveSelected" text="Remove Selected" />

        <Button layoutX="558.0" layoutY="468.0" mnemonicParsing="false" onAction="#handleFinalizeAssignment" text="Save Assignment" />
    </children>
</AnchorPane>
