<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.cse213.cse213mangogardenmanagementsystem.FieldSupervisor.controller.SuggestionsController">
    <children>
        <Text layoutX="20.0" layoutY="40.0" strokeType="OUTSIDE" strokeWidth="0.0" text="SUBMIT IMPROVEMENT SUGGESTIONS">
            <font><Font name="System Bold" size="20.0" /></font>
        </Text>
        <Label layoutX="20.0" layoutY="70.0" prefHeight="18.0" prefWidth="663.0" text="Propose improvements to workflows, equipment, or protocols for review by the General Manager." />

        <Text layoutX="20.0" layoutY="120.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Suggestion Title:" />
        <TextField fx:id="txtTitle" layoutX="20.0" layoutY="130.0" prefWidth="560.0" promptText="Concise title for the improvement idea" />

        <Text layoutX="20.0" layoutY="180.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Detailed Suggestion &amp; Justification:" />
        <TextArea fx:id="txtSuggestion" layoutX="20.0" layoutY="190.0" prefHeight="150.0" prefWidth="560.0" promptText="Describe the problem, the solution, and the expected benefit." />

        <Button layoutX="320.0" layoutY="355.0" mnemonicParsing="false" onAction="#handleSaveSuggestion" text="Save Suggestion" />
        <Button layoutX="460.0" layoutY="355.0" mnemonicParsing="false" onAction="#handleNotifyManager" text="Notify Manager" />
        <Label fx:id="lblConfirmation" layoutX="20.0" layoutY="365.0" text="" />
    </children>
</AnchorPane>
