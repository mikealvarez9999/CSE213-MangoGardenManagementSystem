<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="600.0" prefWidth="700.0" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.cse213.cse213mangogardenmanagementsystem.FieldSupervisor.controller.InstructionsController">
    <children>
        <Text layoutX="20.0" layoutY="40.0" strokeType="OUTSIDE" strokeWidth="0.0" text="PROVIDE INSTRUCTIONS/FEEDBACK FOR ISSUES">
            <font><Font name="System Bold" size="20.0" /></font>
        </Text>
        <Label layoutX="20.0" layoutY="70.0" text="Review issue reports submitted by workers and provide detailed instructions or feedback." />

        <TableView fx:id="issueReportTable" layoutX="20.0" layoutY="100.0" prefHeight="250.0" prefWidth="660.0">
            <columns>
                <TableColumn prefWidth="150.0" text="Report ID" />
                <TableColumn prefWidth="150.0" text="Reported By" />
                <TableColumn prefWidth="360.0" text="Issue Description" />
            </columns>
        </TableView>

        <Text layoutX="20.0" layoutY="380.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Instructions / Feedback:" />
        <TextArea fx:id="txtInstructions" layoutX="20.0" layoutY="390.0" prefHeight="130.0" prefWidth="660.0" promptText="Enter detailed response, instructions, or resolution steps here." />

        <Button layoutX="490.0" layoutY="530.0" mnemonicParsing="false" onAction="#handleSaveInstructions" text="Save Instructions / Feedback" />
    </children>
</AnchorPane>
